@model LoginUser

<h3 class="text-center">Login</h3>
<hr />

<form asp-controller="Home" asp-action="Login" method="POST">

    <div class="form-group">
        <label asp-for="LoginEmail"></label>
        <span asp-validation-for="LoginEmail"></span>
        <input asp-for="LoginEmail" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="LoginPassword"></label>
        <span asp-validation-for="LoginPassword"></span>
        <input asp-for="LoginPassword" type="password" class="form-control" value="abcdefghijkl" />
    </div>

    <button class="btn btn-outline-primary">Login</button>
</form>